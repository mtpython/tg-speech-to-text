# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
BOT_PASSWORD=your_bot_password_here

# Speech-to-Text Provider Selection
# Options: whisper, elevenlabs, google
STT_PROVIDER=whisper

# OpenAI Whisper API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs STT API Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Google Cloud STT Configuration
# Either provide the JSON as a string or path to credentials file
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project",...}

# Logging Configuration (optional)
RUST_LOG=info
RUST_BACKTRACE=1

# FFmpeg Configuration (optional)
# Most systems have ffmpeg in PATH, but you can specify custom path if needed
# FFMPEG_PATH=/usr/bin/ffmpeg